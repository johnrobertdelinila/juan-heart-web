#################################################################
# Juan Heart Web App - Docker Environment Configuration
#
# This is the RECOMMENDED configuration for Docker development
# Copy this to .env when running with Docker Compose
#
# Key differences from local development:
# - DB_HOST=mysql (Docker service name, not 127.0.0.1)
# - REDIS_HOST=redis (Docker service name, not 127.0.0.1)
# - CACHE_STORE=redis (Use Redis instead of file cache)
# - SESSION_LIFETIME=480 (8 hours instead of 2)
#################################################################

APP_NAME="Juan Heart Web"
APP_ENV=local
APP_KEY=base64:dV1BAWKaHAJvuw+BikfhPjX+ueZLYwMFESHkrgMvGIA=
APP_DEBUG=true
APP_TIMEZONE=Asia/Manila
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_PH

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#################################################################
# DATABASE CONFIGURATION - FOR DOCKER
# Use service name 'mysql' defined in docker-compose.yml
#################################################################
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=juan_heart
DB_USERNAME=juan_heart
DB_PASSWORD=secret

#################################################################
# SESSION CONFIGURATION
# Increased to 8 hours for better user experience
#################################################################
SESSION_DRIVER=database
SESSION_LIFETIME=480
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

#################################################################
# CACHE CONFIGURATION - FOR DOCKER
# Use Redis for better performance and consistency
#################################################################
CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

#################################################################
# REDIS CONFIGURATION - FOR DOCKER
# Use service name 'redis' defined in docker-compose.yml
#################################################################
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@juanheart.ph"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost

# Horizon
HORIZON_PREFIX=horizon:

# L5 Swagger
L5_SWAGGER_GENERATE_ALWAYS=true

#################################################################
# OPTIONAL: DATABASE CONNECTION PERSISTENCE
# Set to true for connection pooling (recommended for production)
#################################################################
DB_PERSISTENT=false
