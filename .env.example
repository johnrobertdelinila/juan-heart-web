# Juan Heart Web Application - Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_DATABASE=juan_heart
DB_USERNAME=juan_heart
DB_PASSWORD=secret
DB_PORT=3306

# Redis Configuration
REDIS_PORT=6379

# Backend Port
BACKEND_PORT=8000

# Frontend Port
FRONTEND_PORT=3000

# Nginx Ports
NGINX_PORT=80
NGINX_SSL_PORT=443

# Mailhog Ports
MAILHOG_SMTP_PORT=1025
MAILHOG_HTTP_PORT=8025

# phpMyAdmin Port
PHPMYADMIN_PORT=8080
